{
    // editor
    "[typescript]": {
        "editor.formatOnSave": false,
    },
    "[javascript]": {
        "editor.formatOnSave": false,
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true,
    },
    // Files
    "files.associations": {
        ".babelrc": "jsonc",
        ".eslintrc": "jsonc",
        "*.pyi": "python"
    },
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.idea": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.venv": true,
        "**/.coverage": true,
        "**/*.py[co]": true,
    },
    // eslint
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    // Debug
    "debug.allowBreakpointsEverywhere": true,
}